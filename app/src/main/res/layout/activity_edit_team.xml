<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    android:paddingTop="?attr/actionBarSize"
    tools:context=".EditTeam">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:text="EDIT TEAM"
            android:textSize="48sp"
            android:textStyle="bold"
            app:fontFamily="serif-monospace" />

        <Button
            android:id="@+id/add_player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_below="@+id/textView"
            android:drawableTop="@drawable/ic_addplayer"
            android:background="@drawable/custom_button_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"
            android:text="Add Player"
            android:textColor="@drawable/custom_button_text_color" />



        <Button
            android:id="@+id/update_player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_below="@+id/textView"
            android:drawableTop="@drawable/ic_update"
            android:background="@drawable/custom_button_image3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="250dp"
            android:text="Update/Delete Player"
            android:textColor="@drawable/custom_button_text_color" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>